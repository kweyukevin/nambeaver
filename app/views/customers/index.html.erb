<%= render 'layouts/header' %>

<div class="container-fluid">
  <div class="row">
    <%= render 'layouts/navigation'%>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Customers</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <%= link_to new_customer_path do %>
                <button type="button" class="btn btn-sm btn-outline-secondary">+ New Customer</button>
            <%end%>
          </div>
          <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
            This week
          </button>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Phone No</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= customer.name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone_number %></td>
                <td>
                  <%= link_to customer do%>
                    <button class="btn btn-sm btn-primary">
                    View
                    </button>
                  <%end%>
                </td>
                <td>
                  <%= link_to edit_customer_path(customer) do%>
                    <button class="btn btn-sm btn-secondary">
                    Edit
                    </button>
                  <%end%>
                </td>
                <td>
                  <%= link_to customer, method: :delete, data: { confirm: 'Are you sure?' }  do%>
                    <button class="btn btn-sm btn-danger">
                    Delete
                    </button>
                  <%end%>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
