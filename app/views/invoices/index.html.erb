
<%= render 'layouts/header' %>

<div class="container-fluid">
  <div class="row">
  <%= render 'layouts/navigation'%>

<p id="notice"><%= notice %></p>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h2 class="h2">Invoices</h2>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <%= link_to new_invoice_path do %>
            <button type="button" class="btn btn-sm btn-outline-secondary">+ Create Invoice</button>
        <%end%>
      </div>

    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">Customer</th>
      <th scope="col">Currency</th>
      <th scope="col">Due date</th>
      <th scope="col">Status</th>
      <th scope="col">Description</th>
      <th scope="col">Quantity</th>
      <th scope="col">Unit price</th>
      <th scope="col">Total price</th>
      <th scope="col">Comment</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.customer.name %></td>
        <td><%= invoice.currency.symbol %></td>
        <td><%= invoice.due_date %></td>
        <td><%= invoice.invoice_status %></td>
        <td><%= invoice.invoice_description %></td>
        <td><%= invoice.invoice_quantity %></td>
        <td><%= invoice.invoice_unit_price %></td>
        <td><%= invoice.invoice_total_price %></td>
        <td><%= invoice.invoice_comment %></td>

        <td><button class="btn btn-sm btn-outline-secondary">  <%= link_to 'Preview', invoice %> </button> </td>
        <td> <button class="btn btn-sm btn-outline-secondary">  <%= link_to 'Edit', edit_invoice_path(invoice) %> </button></td>
        <td> <button class="btn btn-sm btn-outline-secondary">  <%= link_to 'Delete', invoice, method: :delete, data: { confirm: 'Are you sure?' } %> </button></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<br>
